<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="#EEEEEE"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Caso + Fecha -->
        <TextView
            android:id="@+id/txtCaso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Caso Nº 0"
            android:textStyle="bold"
            android:textColor="@color/dark_red"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/containerRight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constrainedWidth="true" />

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23/11/2025 09:53"
            android:textColor="#666666"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/txtCaso"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Descripción"
            android:textColor="#222222"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/containerRight"
            app:layout_constraintTop_toBottomOf="@id/txtCaso"
            app:layout_constrainedWidth="true" />

        <!-- Dirección -->
        <TextView
            android:id="@+id/txtDireccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Dirección"
            android:textColor="#444444"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/containerRight"
            app:layout_constraintTop_toBottomOf="@id/txtDescripcion"
            app:layout_constrainedWidth="true" />

        <!-- Estado -->
        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:text="Pendiente"
            android:textColor="@color/dark_red"
            android:textStyle="bold"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtDireccion" />

        <!-- Botón Ver minimalista, al lado del estado -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVer"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:cornerRadius="999dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/dark_red"
            app:iconPadding="0dp"
            app:layout_constraintStart_toEndOf="@id/txtEstado"
            app:layout_constraintEnd_toStartOf="@id/containerRight"
            app:layout_constraintBaseline_toBaselineOf="@id/txtEstado" />

        <!-- Columna derecha: foto -->
        <LinearLayout
            android:id="@+id/containerRight"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintTop_toTopOf="@id/txtDescripcion"
            app:layout_constraintBottom_toBottomOf="@id/txtEstado"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_image_border">

                <ImageView
                    android:id="@+id/imgFoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />
            </FrameLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
