<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:strokeColor="#EEEEEE"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Estado (izquierda) -->
        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Finalizado"
            android:textStyle="bold"
            android:textColor="@color/dark_red"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtFecha"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constrainedWidth="true" />

        <!-- Fecha (derecha, misma línea) -->
        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23/11/2025 12:53"
            android:textColor="@color/gray"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/txtEstado" />

        <!-- Mensaje (fila central, 2 líneas máx) -->
        <TextView
            android:id="@+id/txtMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Tu denuncia #16 ha sido finalizada por el municipio."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtEstado"
            app:layout_constrainedWidth="true" />

        <!-- Botón Ver denuncia (pill rojo, pequeño) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerDenuncia"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Ver denuncia"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:cornerRadius="999dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/dark_red"
            app:iconPadding="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtMensaje"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Botón Marcar como leída (outlined gris) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarcarLeida"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Marcar como leída"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:textColor="@color/gray"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            app:iconPadding="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray"
            app:cornerRadius="999dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtMensaje"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
