<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CABECERA COMN -->
    <include
        android:id="@+id/includeHeader"
        layout="@layout/include_header" />

    <!-- CONTENIDO SCROLLEABLE -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD SUPERIOR (Bienvenida) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Fila saludo + bot贸n -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtBienvenida"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hola, usuario "
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#B41C1C" />

                        <Button
                            android:id="@+id/btnIngresarDenuncia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#B41C1C"
                            android:text="Ingresar"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <!-- Texto descriptivo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Desde aqu铆 puedes reportar microbasurales en tu barrio. Selecciona la ubicaci贸n en el mapa, agrega una descripci贸n y una foto. Nuestro equipo municipal har谩 el seguimiento."
                        android:textColor="#444444"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECCIN NOTIFICACIONES COMO ACORDEN -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNotificaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header clicable -->
                    <LinearLayout
                        android:id="@+id/layoutNotificacionesHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="10dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/imgNotificaciones"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_notifications"
                            android:tint="@color/dark_red" />

                        <TextView
                            android:id="@+id/txtTituloNotificaciones"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Notificaciones recientes"
                            android:textStyle="bold"
                            android:textColor="@color/dark_red"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtNotificacionesBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:background="@drawable/bg_badge_notificaciones"
                            android:text="3"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imgExpandNotificaciones"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_expand_more"
                            android:tint="@color/dark_red" />
                    </LinearLayout>

                    <!-- Lista en acorde贸n -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvNotificaciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:paddingHorizontal="4dp"
                        android:paddingBottom="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- SECCIN MIS DENUNCIAS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mis denuncias recientes"
                android:textStyle="bold"
                android:background="#B41C1C"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMisDenuncias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- PIE COMN -->
    <include
        android:id="@+id/includeFooter"
        layout="@layout/include_footer" />

</LinearLayout>
