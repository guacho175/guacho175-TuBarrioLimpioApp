<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principal de la app -->
    <style name="Theme.TuBarrioLimpioApp" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Colores principales (usando tus colors.xml) -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/dark_red</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Fondos: app siempre clara -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <!-- ESTA era la línea que rompía: antes era colorBackground -->
        <item name="android:colorBackground">@color/white</item>

        <!-- Desactivar modo oscuro automático (force dark) -->
        <item name="android:forceDarkAllowed">false</item>

        <!-- Colores de texto por defecto -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Barras del sistema (ajusta si quieres otros colores) -->
        <item name="android:statusBarColor">@color/dark_red</item>
        <item name="android:navigationBarColor">@color/black</item>

    </style>

</resources>
